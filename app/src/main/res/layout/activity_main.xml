<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageArea"
        android:layout_width="500dp"
        android:layout_height="410dp"
        android:contentDescription="welcome"
        android:src="@drawable/w2"
        tools:ignore="HardcodedText,ImageContrastCheck" />

    <TextView
        android:id="@+id/nameArea"
        android:layout_width="384dp"
        android:layout_height="116dp"
        android:layout_below="@id/imageArea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Shuru Kare"
        android:textAlignment="center"
        android:textSize="60sp"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="550dp"
        android:background="#AD1457" />

    <Button
        android:id="@+id/preBTN"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameArea"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="#FFFFFF"
        android:text="Previous"
        android:textColor="#AC1457"
        android:textSize="30sp"
        tools:ignore="DuplicateClickableBoundsCheck,HardcodedText" />

    <Button
        android:id="@+id/nextBTN"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameArea"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="190dp"
        android:backgroundTint="#FFFFFF"
        android:text="Next"
        android:textColor="#AC1457"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>